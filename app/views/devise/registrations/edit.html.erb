<section id="main" >
  <div class="inner">
    <header class="major special">
      <h1>Edit <%= resource_name.to_s.humanize %></h1>
      <p>Edit the necessary fields</p>
    </header>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
      <%= devise_error_messages! %>

      <div class="row">  
        <div class="field 6u 12u$(xsmall)">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field 6u 12u$(xsmall)">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      
        <div class="field 6u 12u$(xsmall)">
          <%= f.label :password %> 
          <%= f.password_field :password, autocomplete: "off", placeholder: "Leave blank if you don't want to change it" %>                
        </div>

        <div class="field 6u 12u$(xsmall)">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
 
        <div class="field 6u 12u$(xsmall)">
          <%= f.label :group_id %>
          <%= f.collection_select :group_id, Group.order(:name), :id, :name %>
        </div>

        <div class="field 6u 12u$(xsmall)">
          <%= f.label :avatar %>
          <%= f.file_field :avatar %>
        </div>  

        <div class="field 12u">
          <%= f.label :position %>
          <%= f.text_area :position %>
        </div>

        <div class="field 12u">
          <%= f.label :current_password %>
          <%= f.password_field :current_password, autocomplete: "off" %>
           <i>(we need your current password to confirm your changes)</i>
        </div>
      </div>      

      <div class="actions">
        <%= f.submit "Update", :class => "button special" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>
    
  </div>
</section>
