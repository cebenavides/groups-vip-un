<section id="main" >
  <div class="inner">
    <header class="major special">
      <h1>Sign up</h1>
      <p>Register as a member</p>
    </header>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="field 6u 12u$(xsmall)">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field 6u 12u$(xsmall)">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>        
   
        <div class="field 6u 12u$(xsmall)">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field 6u 12u$(xsmall)">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field 6u 12u$(xsmall)">
          <%= f.label :group_id %>
          <%= f.collection_select :group_id, Group.order(:name), :id, :name, include_blank: true %>
        </div>

        <div class="field 6u 12u$(xsmall)">
          <%= f.label :avatar %>
          <%= f.file_field :avatar %>
        </div> 

        <div class="field 12u">
          <%= f.label :position %>
          <%= f.text_area :position %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>