<section id="main" class="container">
	<header>
		<h2>Sign up</h2>
	</header>
	
	<div class="box">
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
      <%= devise_error_messages! %>
      <div class="row uniform 50%">
        <div class="field 6u 12u(mobilep)">
          <%= f.email_field :email, autofocus: true, placeholder: 'E-mail' %>
        </div>

        <div class="field 6u 12u(mobilep)">
          <%= f.text_field :name, placeholder: 'Name' %>
        </div>
      </div>
      
      <div class="row uniform 50%">
        <div class="field 6u 12u(mobilep)">
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
        </div>

        <div class="field 6u 12u(mobilep)">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password confirmation' %>
        </div>
      </div>
      
      <div class="row uniform 50%">
        <div class="field 6u 12u(mobilep)">
          <%= f.collection_select :group_id, Group.order(:name), :id, :name, {:prompt => '-Group-'} %>
        </div>

        <div class="field 6u 12u(mobilep)">
          <%= f.label :avatar %>
          <%= f.file_field :avatar %>
        </div>
      </div>
      
      <div class="row uniform 50%">
        <div class="field 12u">
          <%= f.text_area :position, placeholder: 'Description of yourself' %>
        </div>
      </div>

      <div class="row uniform">
        <div class="actions 12u">
          <%= f.submit 'Sign up', :class => 'button special small' %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
	</div>
</section>