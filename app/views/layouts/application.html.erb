<!DOCTYPE html>
<html>
  <head>
    <title>Groups Website</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
  	 <p class="notice" id="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
  	 <p class="alert"><%= alert %></p>    
    <% end %>

    <header id="header">
      <div class="inner">
        <a href="/" class="logo">VIP groups</a>
        <nav id="nav">
          <% if user_signed_in? %>
            <%= link_to('Home', root_path) %>   
            <%= link_to('My group', group_path(current_user.group)) %>      
            <%= link_to('Edit profile', edit_user_registration_path) %>        
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
          <% elsif admin_signed_in? %>
            <%= link_to('Home', root_path) %>   
            <%= link_to('Groups', groups_path) %>    
            <%= link_to('Users', dashboard_users_path) %>   
            <%= link_to('Logout', destroy_admin_session_path, :method => :delete) %>        
          <% else %>
            <%= link_to('Login user', new_user_session_path)  %>  
            <%= link_to('Login admin', new_admin_session_path)  %>  
          <% end %>
        </nav>
      </div>
    </header>
    <a href="#menu" class="navPanelToggle"><span class="fa fa-bars"></span></a>

    <%= yield %>

    <section id="footer">
      <div class="inner">
        <div class="copyright">
          &copy; Untitled Design: <a href="https://templated.co/">TEMPLATED</a>. Images <a href="https://unsplash.com/">Unsplash</a>
        </div>
      </div>
    </section>
  </body>
</html>
