<section id="main" class="container">
	<header>
		<h2>Pages</h2>
		<p><%= @group.name %> group</p>
	</header>
	<div class="box">
		<table>
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @pages.each do |page| %>
          <tr>
            <td><%= page.title %></td>
            <td><%= link_to 'Show', page %></td>
            <td><%= link_to 'Edit', edit_page_path(page) %></td>
            <td><%= link_to page.visible ? "Hide":"Make visible", visibility_page_path(page) %></td>
            <td><%= link_to 'Delete', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to('Add page', new_group_page_path(@group), :class => 'button special small') %> 
	</div>
</section>