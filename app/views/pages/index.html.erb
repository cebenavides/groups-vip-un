<section id="main" >
  <div class="inner">
    <header class="major special">
      <h1>Pages</h1>
      <p>List of all the pages by the group <%= @group.name %></p>
    </header>

    <table>
      <thead>
        <tr>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pages.each do |page| %>
          <tr>
            <td><%= truncate(strip_tags(page.content), :length => 20) %></td>
            <td><%= link_to 'Show', group_page_path(@group, page) %></td>
            <td><%= link_to 'Edit', edit_group_page_path(@group, page) %></td>
            <td><%= link_to 'Destroy', group_page_path(@group, page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <%= link_to('Add page', new_group_page_path(@group), :class => 'button special') %> 
  </div>
</section>