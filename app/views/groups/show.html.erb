<section id="main" >
	<div class="inner">
		<header class="major special">
			<h1><%= @group.name %></h1>
			<p>Description of the group</p>
		</header>
		<a href="#" class="image fit"><%= image_tag @group.avatar.url %></a>
		
		<p><%= @group.description %></p>

		<h3>Members</h3>
		<div class="row">
			<% @users.each do |user| %>
				<div class="4u 12u$(xsmall)">
					<article>
						<div class="content">
							<center><%= image_tag user.avatar.url(:medium), :style => "width:200px;height:200px;border-radius:50%" %></center>
							<ul class="alt">
								<li><strong><%= user.name %></strong></li>
								<li>Email: <%= user.email %></li>
								<li><%= user.position %></li>
							</ul>
						</div>
					</article>
				</div>	
			<% end %>	
		</div>

		<h3>Publications</h3>
		<ul>
			<% @publications.each do |publication| %>
				<li><%= publication.name %> | <%= link_to "Link", publication.link %></li>
			<% end %>
		</ul>
	</div>
</section>