<section id="main" >
	<div class="inner">
		<header class="major special">
			<h1><%= @group.name %></h1>
			<p>Description of the group</p>
		</header>
		<a href="#" class="image fit"><%= image_tag @group.avatar.url %></a>
		
		<p><%= @group.description %></p>

		<h3>Members</h3>
		<div class="row">
				<% @users.each do |user| %>
					<div class="4u 12u$(xsmall)">
						<article>
							<div class="content">
								<center><%= image_tag user.avatar.url(:medium), :style => "width:200px;height:200px;border-radius:50%" %></center>
								<header>
									<p><strong><%= user.name %></strong></p>
								</header>
								<p>Email: <%= user.email %></p>
								<p>Position: <%= user.position %></p>
							</div>
						</article>
					</div>	
				<% end %>	
			</div>		
	</div>
</section>