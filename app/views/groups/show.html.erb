<section id="main" class="container">
	<header>
		<h2><%= @group.name %></h2>
	</header>
	<div class="box">
		
		<div class="owl-carousel owl-theme">
			<% @images.each do |image| %>
		    	<div class="item"><%= image_tag image.avatar.url %></div>
		    <% end %>
		</div>

		
		<p align="justify"><%= @group.description %></p>

		<h3>Members</h3>
		<div class="row">
			<p align="justify">
				<span class="image left"><%= image_tag @admin.avatar.url(:medium), :style => "width:100px;height:100px;" %></span>
				<strong><%= @admin.name %>.</strong> <%= @admin.position %>
			</p>
		</div>
		
		<% @users.each do |user| %>
			<div class="row">
				<p align="justify">
					<span class="image left"><%= image_tag user.avatar.url(:medium), :style => "width:100px;height:100px;" %></span>
					<strong><%= user.name %>.</strong> <%= user.position %>
					<% if user.site.present? %>
						| <%= link_to "", user.site, :class => 'icon fa-desktop' %>
					<% end %>
				</p>
			</div>
		<% end %>
			
		<% if @publications.any? %>
			<h3>Publications</h3>
			<ul class="alt">
				<% @publications.each do |publication| %>
					<li>
						<%= publication.name %>
						<% if publication.link.present? %>
							| <%= link_to "Link", publication.link, :class => 'button special small' %>
						<% end %>
					</li>
				<% end %>
			</ul>
		<% end %>

		<% if @pages.any? %>
			<h3>Pages</h3>
			<ul class="alt">
				<% @pages.each do |page| %>
					<li><%= page.title %> | <%= link_to "Read", page, :class => 'button special small' %></li>
				<% end %>
			</ul>
		<% end %>
	</div>
</section>

<script>
$('.owl-carousel').owlCarousel({
    loop:true,
    margin:10,
    nav:true,
	items:1
})
</script>